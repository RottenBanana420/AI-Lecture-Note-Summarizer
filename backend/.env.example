# Database Configuration
# PostgreSQL connection details - used by Docker Compose and application
# SECURITY: Never commit the actual .env file with real credentials to version control

# PostgreSQL User (default: postgres)
# For production, create a dedicated user with limited privileges
POSTGRES_USER=postgres

# PostgreSQL Password
# IMPORTANT: Use a strong password (min 16 chars, mix of letters, numbers, symbols)
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=your-secure-password-here-change-this

# PostgreSQL Database Name
# Following naming convention: lowercase, underscores, descriptive
POSTGRES_DB=lecture_summarizer_dev

# PostgreSQL Host
# Use 'localhost' for local development, 'postgres' when connecting from other Docker containers
POSTGRES_HOST=localhost

# PostgreSQL Port (default: 5432)
POSTGRES_PORT=5432

# Complete Database URL (constructed from above variables)
# Format: postgresql://user:password@host:port/database
# This is used by SQLAlchemy and other database clients
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Application Security
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string

# Application Settings
ENVIRONMENT=development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Configuration
API_V1_PREFIX=/api/v1

# JWT Configuration (if using JWT authentication)
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI/ML Service Configuration (placeholder for future use)
HF_API_TOKEN=your-huggingface-api-token-here
OPENAI_API_KEY=your-openai-api-key-here

# Redis Configuration (if using caching/sessions)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@example.com

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,txt,docx

# Logging
LOG_LEVEL=INFO
